<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.aula_7.relativelayaourttres.MainActivity">
    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_center"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_1"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_alignLeft="@id/txt_1"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_above="@+id/txt_1"
        />
    <TextView
        android:id="@+id/txt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_2"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:layout_alignBottom="@id/txt_1"

        android:layout_above="@+id/txt_1"
        />

</RelativeLayout>
